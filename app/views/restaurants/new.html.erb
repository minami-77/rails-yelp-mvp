<h1>Yelp</h1>
  <h2>Add a new restaurant</h2>
    <%= simple_form_for (@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection:["chinese", "italian", "japanese", "french", "belgian"] %>
      <%= f.submit "Add a restaurant", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Back to Restaurants List", restaurants_path, class: "btn btn-primary"%>
